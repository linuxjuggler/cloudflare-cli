{
    "name": "zaherg/cloud-cli",
    "description": "A cli application to work with Cloudflare.",
    "keywords": ["domain", "dns", "cloudflare", "console", "cli","cloud"],
    "homepage": "https://github.com/linuxjuggler/cloudflare-cli",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/linuxjuggler/cloud-cli/issues",
        "source": "https://github.com/linuxjuggler/cloud-cli"
    },
    "authors": [
        {
            "name": "Zaher Ghaibeh",
            "email": "z@zah.me"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "cloudflare/sdk": "^1.1",
        "laravel-zero/framework": "5.8.*",
        "padraic/phar-updater": "^1.0",
        "vlucas/phpdotenv": "^3.0",
        "zendframework/zend-text": "^2.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "ext-posix": "0"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php application app:rename"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["cloud"]
}
